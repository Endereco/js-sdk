  <span class="font-bold uppercase">{{ label }}</span>
  <textarea
    class="break-all appearance-none block w-full bg-gray-200 text-gray-800 border border-gray-400 rounded shadow-inner py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-600"
    id="{{ id }}"
    name="{{ id }}"
    rows=6
    >{{ value | escape }}
    </textarea>
</label>
{% endmacro %}

