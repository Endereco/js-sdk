{% macro table(submittedData=null) %}

{% if submittedData %}
<h2 class="text-xl font-semibold text-gray-900 mb-3">Submitted Data</h2>
<div id="submittedData-table" class="bg-gray-200 rounded-lg p-6 my-4">
  <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="bg-gray-100 py-3 px-6">Key</th>
        <th scope="col" class="bg-gray-100 py-3 px-6">Value</th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800">
      {% for key, value in submittedData %}
      <tr
        class="border-b dark:bg-gray-800 dark:border-gray-700 {% if loop.index0 is odd %}bg-gray-50 dark:bg-gray-700{% else %}bg-white dark:bg-gray-800{% endif %}">
        <td class="py-1 px-6 {% if loop.index0 is odd %}bg-gray-100 dark:bg-gray-700{% endif %}">
          {{ key }}
        </td>
        <td
          class="py-1 px-6 break-all {% if loop.index0 is odd %}bg-gray-100 dark:bg-gray-700{% endif %}">
          {{ value }}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>
{% endif %}

{% endmacro %}